%nav.main-header.navbar.navbar-expand.navbar-white.navbar-light
  / Left navbar links
  %ul.navbar-nav
    %li.nav-item
      %a.sidebar-toggle-btn.nav-link{"data-widget" => "pushmenu", :href => "#", :role => "button"}
        %i.fas.fa-bars
    %li.nav-item.d-none.d-sm-inline-block
      %a.nav-link{:href => "/admin"} Home
  / Right navbar links
  %ul.navbar-nav.ml-auto
    - if Settings.localized?
      - active_locale = I18n.locale.to_s
      %li.nav-item.dropdown
        %a{"data-toggle" => "dropdown", href: "#", class: "nav-link #{action_name == 'edit' ? 'disabled' : ''}"}
          %i.fa-solid.fa-globe
          = active_locale
        .dropdown-menu.dropdown-menu-right.p-0
          - language_list.each do |lang|
            %a{href: url_for(params.merge({locale: lang[:code]}).as_json), class: "dropdown-item #{active_locale == lang[:code] ? 'active' : ''}"}
              = "#{lang[:code]} #{lang[:name]}"
    %li.nav-item
      %a.nav-link{"data-widget" => "fullscreen", :href => "#", :role => "button"}
        %i.fas.fa-expand-arrows-alt
