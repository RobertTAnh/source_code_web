#!/usr/bin/env bash

if [ -z "$1" ]
then
  echo "Error: website name must be given"
  echo "Usage: bin/dev <website_name>"
  exit 1
fi

web_name="$1"
database_name="$1_dev"

echo "Starting for $web_name"

# Check if foreman installed
# if ! foreman version &> /dev/null
# then
#   echo "Installing foreman..."
#   gem install foreman
# fi

WEB="$web_name" WAKER_POSTGRES_DB_NAME="$database_name" foreman start -f Procfile.dev

